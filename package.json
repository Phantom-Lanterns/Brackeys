{
  "name": "my-phaser-game",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/node": "^20.19.33",
    "babel-eslint": "^10.1.0",
    "css-loader": "^7.1.3",
    "eslint": "^10.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.6",
    "mini-css-extract-plugin": "^2.10.0",
    "style-loader": "^4.0.0",
    "stylelint": "^17.3.0",
    "stylelint-config-recommended": "^18.0.0",
    "surge": "^0.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "app": {
    "title": "Web Site"
  },
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server",
    "deploy": "yarn build && surge -p ./dist",
    "lint": "eslint src/**/*.js && stylelint src/**/*.css"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "keyword-spacing": [
        "error",
        {
          "before": true
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "eqeqeq": [
        "error",
        "always"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  }
}
